<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0e0" >

    <RelativeLayout 
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
    	android:layout_height="wrap_content">
        <TextView 
            android:layout_width="fill_parent"
    		android:layout_height="44dp"
    		android:gravity="center"
    		android:textSize="18sp"
    		android:background="#486a9a"
    		android:textColor="@android:color/white"
    		android:text="用户信息"/>

        <Button
            android:id="@+id/button1"
               android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
             android:layout_marginLeft="8dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/title_btn_back_selector"
            android:text="返回"
            android:textColor="@color/title_button_color_gray" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_top" >

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/username"
            android:layout_alignBottom="@+id/username"
            android:layout_toRightOf="@+id/userpic"
            android:ems="3"
            android:text="性别："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/identify_number"
            android:layout_below="@+id/identify_number"
            android:layout_marginTop="38dp"
            android:ems="5"
            android:text="电子邮箱："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/email"
            android:layout_below="@+id/email"
            android:layout_marginTop="36dp"
            android:ems="5"
            android:text="电话号码："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/userpic"
            android:layout_marginTop="31dp"
            android:ems="3"
            android:text="姓名："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/identify_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ems="5"
            android:text="身份证号："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/hospitalization_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/identify_number"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="37dp"
            android:ems="4"
            android:text="住院号："
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView1_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/username"
            android:layout_toRightOf="@+id/hospitalization_number"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextView01_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gender"
            android:layout_toRightOf="@+id/gender"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextView02_hospitalization_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hospitalization_number"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextView05_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/phone"
            android:layout_toRightOf="@+id/textView1_username"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextView04_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/phone"
            android:layout_alignLeft="@+id/TextView05_phone"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TextView03_identify_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/identify_number"
            android:layout_alignLeft="@+id/TextView04_email"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/userpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/hxlogo" />
        
    </RelativeLayout>
    
</RelativeLayout>